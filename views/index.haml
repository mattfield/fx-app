.row
  .col-md-6
    %form.form-horizontal
      .form-group
        %label.col-sm-2.control-label{:for => "inputEmail3"} Date:
        .col-sm-10
          %input#inputEmail3.form-control{:value => "#{Date.today.strftime('%d-%m-%Y')}",:placeholder => "DD-MM-YYYY", :type => "datetime"}/
      .form-group
        %label.col-sm-2.control-label{:for => "inputPassword3"} Amount:
        .col-sm-10
          %input#inputPassword3.form-control{:placeholder => "Amount", :type => "text"}/
  .col-md-6
    %form.form-horizontal
      .form-group
        %label.col-sm-2.control-label{:for => "inputEmail3"} From:
        .col-sm-10
          %select#inputEmail3.form-control
            %option EUR 
      .form-group
        %label.col-sm-2.control-label{:for => "inputPassword3"} To:
        .col-sm-10
          %select#inputEmail3.form-control
            %option EUR 
.row
  .form-group
    .col-md-offset-1.col-sm-offset-2.col-sm-10
      %button.btn.btn-default{:type => "submit"} Convert
